<!-- index/archive/about section profile left -->
<div class="col-md-3 section-profile">
    <div class="logo-image"><img src="<%- theme.index_user_avatar || theme.default_user_avatar %>" class="img-responsive img-thumbnail center-block" title="Snow"></div>
    <h4 class="profile-nickname"><%= theme.intros_nickname %></h4>


    <h3 class="center-block blockquote-font"><%= theme.index_quote%></h3>

    <!-- social accounts -->
    <div class="socal-links">
        <ul>
            <li>
                <a href="mailto:<%= theme.email %>" target="_blank">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle-thin fa-stack-2x"></i>
                        <i class="fa fa-envelope fa-stack-1x"></i>
                    </span>
                </a>
            </li>
            <li><a href="<%- theme.github %>" target="_blank">
                <span class="fa-stack fa-lg">
                    <i class="fa fa-circle-thin fa-stack-2x"></i>
                    <i class="fa fa-github fa-stack-1x"></i>
                </span>
            </a></li>
            <li><a href="<%= theme.sina %>" target="_blank">
                <span class="fa-stack fa-lg">
                    <i class="fa fa-circle-thin fa-stack-2x"></i>
                    <i class="fa fa-weibo fa-stack-1x"></i>
                </span>
            </a></li>

        </ul>
    </div>

</div>
